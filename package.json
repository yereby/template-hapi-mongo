{
  "name": "template-hapi",
  "version": "1.0.0",
  "author": "Jérémy Giuseppi <yereby@gmail.com>",
  "license": "MIT",
  "description": "Template project to use hapijs",
  "main": "src/index.js",
  "scripts": {
    "cover": "tap test/unit/*.js --cov --coverage-report=lcov",
    "livereload": "livereload . -e pug -w 1700",
    "lint": "eslint .",
    "start": "nodemon -e js,pug src/index.js",
    "test": "tap -b -- test/unit/*.js",
    "test:J": "tap -bJ -- test/unit/*.js",
    "test:p": "tap -J --reporter=nyan -- test/unit/*.js",
    "test:w": "nodemon --exec npm run test:J"
  },
  "dependencies": {
    "boom": "^7.1.1",
    "good": "^8.1.1",
    "good-console": "^7.0.1",
    "good-squeeze": "^5.0.2",
    "hapi": "^17.2.3",
    "hapi-auth-jwt2": "^8.0.0",
    "inert": "^5.1.0",
    "joi": "^13.1.2",
    "joi-objectid": "^2.0.0",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.11",
    "pug": "^2.0.3",
    "vision": "^5.3.2"
  },
  "devDependencies": {
    "dotenv": "^5.0.1",
    "eslint": "^4.19.0",
    "faker": "^4.1.0",
    "hapi-swagger": "^9.1.1",
    "livereload": "^0.6.3",
    "nodemon": "^1.17.2",
    "pre-commit": "^1.2.2",
    "sinon": "^4.4.8",
    "sinon-mongoose": "^2.1.1",
    "tap": "^11.1.3"
  },
  "pre-commit": [
    "lint",
    "test:p"
  ],
  "nyc": {
    "exclude": [
      "src/plugins/DB.js"
    ]
  }
}
