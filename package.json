{
  "name": "template-hapi",
  "version": "1.0.0",
  "author": "Jérémy Giuseppi <yereby@gmail.com>",
  "license": "MIT",
  "description": "Template project to use hapijs",
  "main": "src/index.js",
  "scripts": {
    "cover": "tap test/*.js --cov --coverage-report=lcov",
    "livereload": "livereload . -e pug -w 1700",
    "lint": "eslint .",
    "start": "nodemon -e js,pug src/index.js",
    "test": "tap -b --cov -- test/*.js",
    "test:parallel": "tap -J --reporter=nyan -- test/*.js",
    "test:watch": "nodemon --exec npm test"
  },
  "dependencies": {
    "boom": "^6.0.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.6.2",
    "inert": "^4.2.1",
    "joi": "^13.0.0",
    "mongoose": "^4.12.2",
    "pug": "^2.0.0-rc.4",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "livereload": "^0.6.2",
    "nodemon": "^1.12.0",
    "pre-commit": "^1.2.2",
    "sinon": "^4.0.1",
    "sinon-mongoose": "^2.0.2",
    "tap": "^10.7.2"
  },
  "pre-commit": [
    "lint",
    "test:parallel"
  ],
  "nyc": {
    "exclude": [
      "src/plugins/connectDB.js",
      "test"
    ]
  }
}
