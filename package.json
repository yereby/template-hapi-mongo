{
  "name": "template-hapi",
  "version": "1.0.0",
  "author": "Jérémy Giuseppi <yereby@gmail.com>",
  "license": "MIT",
  "description": "Template project to use hapijs",
  "main": "src/index.js",
  "scripts": {
    "cover": "tap test/*.js --cov --coverage-report=lcov",
    "livereload": "livereload . -e pug -w 1700",
    "lint": "eslint .",
    "start": "nodemon -e js,pug src/index.js",
    "test": "tap -b -- test/*.js",
    "test:p": "tap -J --reporter=nyan -- test/*.js",
    "test:w": "nodemon --exec npm test"
  },
  "dependencies": {
    "boom": "^7.1.1",
    "good": "^8.0.1",
    "good-console": "^7.0.1",
    "good-squeeze": "^5.0.2",
    "hapi": "^17.1.1",
    "inert": "^5.1.0",
    "joi": "^13.1.2",
    "joi-objectid": "^2.0.0",
    "mongoose": "^5.0.3",
    "pug": "^2.0.0-rc.4",
    "vision": "^5.3.1"
  },
  "devDependencies": {
    "eslint": "^4.17.0",
    "livereload": "^0.6.3",
    "nodemon": "^1.14.12",
    "pre-commit": "^1.2.2",
    "sinon": "^4.2.2",
    "sinon-mongoose": "^2.0.2",
    "tap": "^11.1.0"
  },
  "pre-commit": [
    "lint",
    "test:p"
  ],
  "nyc": {
    "exclude": [
      "src/plugins/DB.js"
    ]
  }
}
